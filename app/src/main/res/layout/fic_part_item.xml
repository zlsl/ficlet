<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin">


    <LinearLayout
        android:id="@+id/fcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:background="?attr/selectableItemBackground"
        android:orientation="vertical">


        <TextView
            android:id="@+id/tv_part_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/card_margin"
            android:text="@string/str_default_text"
            android:textColor="@color/textColorDarkPrimary"
            android:textSize="@dimen/list_item_text_size"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_part_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:layout_weight="0.5"
                android:text="@string/str_default_text"
                android:textColor="@color/textColorDarkSecondary"
                android:textSize="@dimen/list_item_sub_text_size" />

            <TextView
                android:id="@+id/tv_part_read"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_margin"
                android:layout_weight="0.5"
                android:gravity="end"
                android:text="@string/str_default_text"
                android:textColor="@color/textColorDarkSecondary"
                android:textSize="@dimen/list_item_sub_text_size" />

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>