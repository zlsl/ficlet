<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:background="@null"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="?attr/selectableItemBackground"
        app:cardBackgroundColor="#faf4ea"
        app:cardCornerRadius="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/layout_direction"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#8915a5"
                android:elevation="6dp"
                android:orientation="vertical"
                tools:targetApi="lollipop">

                <TextView
                    android:id="@+id/tv_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:padding="@dimen/card_margin"
                    android:shadowColor="#000000"
                    android:shadowDx="3"
                    android:shadowDy="3"
                    android:shadowRadius="5"
                    android:text="@string/str_dir_dee"
                    android:textColor="#fff"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/ff_bg"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/card_margin"
                android:paddingTop="@dimen/card_margin"
                android:paddingRight="@dimen/card_margin"
                android:paddingBottom="@dimen/card_margin">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/f_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/str_default_text"
                        android:textColor="@color/textColorDarkPrimary"
                        android:textSize="@dimen/list_item_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/f_sup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/card_margin"
                        android:layout_marginLeft="@dimen/card_margin"
                        android:text="@string/string_default_number"
                        android:textColor="#086e00"
                        android:textSize="@dimen/list_item_text_size"
                        android:textStyle="bold" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_parts"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="false"
                    android:text="@string/str_default_text"
                    android:textColor="@color/textColorDarkSecondary"
                    android:textSize="@dimen/list_item_sub_text_size" />


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

