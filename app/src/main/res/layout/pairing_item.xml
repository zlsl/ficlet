<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:text="@string/str_default_text"
        android:textColor="@color/textColorDarkPrimary"
        android:textSize="@dimen/list_item_text_size"
        app:drawableEndCompat="@drawable/ic_close_black_24dp"
        app:drawableStartCompat="@drawable/ic_account_circle_black_24dp"
        app:drawableRightCompat="@drawable/ic_close_black_24dp"
        app:drawableLeftCompat="@drawable/ic_account_circle_black_24dp" />

</LinearLayout>