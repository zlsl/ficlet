<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_margin"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="3dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:orientation="horizontal"
            android:padding="@dimen/card_margin">


            <LinearLayout
                android:id="@+id/layout_direction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@null"
                android:orientation="vertical">

                <zlobniyslaine.ru.ficbook.controls.MLRoundedImageView
                    android:id="@+id/i_author_avatar"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/ic_launcher" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/card_margin"
                android:layout_marginLeft="@dimen/card_margin"
                android:background="@null"
                android:orientation="vertical"
                android:paddingLeft="@dimen/card_margin"
                android:paddingTop="@dimen/card_margin"
                android:paddingRight="@dimen/card_margin"
                android:paddingBottom="@dimen/card_margin">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/f_author_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/str_default_text"
                        android:textColor="#997744"
                        android:textSize="@dimen/list_item_text_size"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/f_datretime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/str_default_text"
                        android:textColor="@color/textColorDarkSecondary"
                        android:textSize="@dimen/list_item_sub_text_size" />

                </LinearLayout>


                <TextView
                    android:id="@+id/f_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="6dp"
                    android:background="@null"
                    android:text="@string/str_default_text"
                    android:textColor="@color/textColorDarkPrimary"
                    android:textSize="@dimen/list_item_sub_text_size" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@null"
                    android:orientation="horizontal"
                    tools:ignore="UseCompoundDrawables">

                    <TextView
                        android:id="@+id/f_ficname"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="@string/str_default_text"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/list_item_text_size" />

                    <ImageView
                        android:id="@+id/iv_reply"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:contentDescription="@string/str_reply"
                        app:srcCompat="@drawable/ic_announcement_black_24dp" />
                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>

